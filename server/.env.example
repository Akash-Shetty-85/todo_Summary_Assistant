# Environment variables for the server
# This file should be renamed to .env and filled with your credentials
# OpenAI API/ CoHere API Key for text generation
OPENAI_API_KEY=your_openai_api_key_here
COHERE_API_KEY=your_cohere_api_key_here
# Slack Incoming Webhook URL for posting summaries
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Supabase credentials for database access
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key

# Server Port (Optional: defaults to 5000 if not set)
PORT=5000
